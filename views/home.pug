    style
        include ../static/style.css

block content
    body
        section#introSection 
            div Welcome to K's Dance Academy
            div.small Rock n Roll Soniye
        section#missionSection 
            h2  Our Mission
            div.card
                h3 Make Everyone Dance
                div.card-box
                    div.card-img
